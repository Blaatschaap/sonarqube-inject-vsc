{
  "name": "sonarlint",
  "displayName": "SonarLint for Visual Studio Code",
  "description": "SonarLint support for Visual Studio Code that provides on-the-fly feedback to developers on new bugs and quality issues injected into their code.",
  "icon": "images/SBIcon.png",
  "version": "1.0.0",
  "publisher": "silverbulleters",
  "galleryBanner": {
    "color": "#FFFFFF",
    "theme": "dark"
  },
  "license": "SEE LICENSE IN LICENSE.md",
  "bugs": {
    "url": "https://github.com/silverbulleters/sonarlint-vsc/issues"
  },
  "homepage": "https://github.com/silverbulleters/sonarlint-vsc/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/silverbulleters/sonarlint-vsc.git"
  },
  "categories": [
    "Languages"
  ],
  "engines": {
    "vscode": "^1.6.0"
  },
  "badges": [
    {
      "url": "https://david-dm.org/silverbulleters/sonarlint-vsc.svg",
      "href": "https://david-dm.org/silverbulleters/sonarlint-vsc",
      "description": "Dependency Status"
    }
  ],
  "main": "./out/src/extension",
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "commands": [
      {
        "command": "sonarlint.analyzeProject",
        "title": "Analyze current project",
        "category": "SonarLint"
      },
      {
        "command": "sonarlint.updateBindings",
        "title": "Update bindings to SonarQube server",
        "category": "SonarLint"
      }
    ],
    "configuration": {
      "title": "SonarLint configuration",
      "properties": {
        "sonarlint.enableLinter": {
          "description": "Lint project through SonarLint",
          "type": "boolean",
          "default": true
        },
        "sonarlint.sonarlintPath": {
          "description": "Full path to sonarlint binary. Fill this only if sonarlint is not in your $PATH",
          "type": "string",
          "default": ""
        },
        "sonarlint.sourcePath": {
          "description": "GLOB pattern to identify source files",
          "type": "string",
          "default": ""
        },
        "sonarlint.testsPath": {
          "description": "GLOB pattern to identify test files",
          "type": "string",
          "default": ""
        },
        "sonarlint.exclude": {
          "description": "GLOB pattern to exclude files",
          "type": "string",
          "default": ""
        },
        "sonarlint.sourceEncoding": {
          "description": "Character encoding of the source files",
          "type": "string",
          "default": "UTF-8"
        },
        "sonarlint.windowsConsoleEncoding": {
          "description": "Output encoding of Windows command line. Used only on Windows.",
          "type": "string",
          "default": "cp1251"
        },
        "sonarlint.unixConsoleEncoding": {
          "description": "Output encoding of command line on *nix systems.",
          "type": "string",
          "default": "utf8"
        }
      }
    }
  },
  "devDependencies": {
    "@types/node": "^6.0.40",
    "typescript": "^2.0.3",
    "vsce": "^1.15.0",
    "vscode": "^1.0.0"
  },
  "dependencies": {
    "cross-spawn": "^4.0.2",
    "glob": "^7.0.5",
    "iconv-lite": "^0.4.13"
  }
}
